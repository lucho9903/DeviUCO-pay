package co.edu.uco.deviucopay.dto;

import java.util.UUID;

import co.edu.uco.deviucopay.crosscutting.helper.TextHelper;
import co.edu.uco.deviucopay.crosscutting.helper.UUIDHelper;

public final class TipoInstitucionDTO {

	private UUID id;
	private String nombre;
	
	public TipoInstitucionDTO() {
		super();
	}
	
	public TipoInstitucionDTO(UUID id, String nombre) {
		setId(id);
		setNombre(nombre);
	}
	
	public static final TipoInstitucionDTO build() {
		return new TipoInstitucionDTO();
	}
	
	public final UUID getId() {
		return id;
	}
	public final TipoInstitucionDTO setId(UUID id) {
		this.id = UUIDHelper.applyDefault(id);
		return this;
	}
	public String getNombre() {
		return nombre;
	}
	public final TipoInstitucionDTO setNombre(final String nombre) {
		this.nombre = TextHelper.applyTrim(nombre);
		return this;
	}
	public static void main (String[] args) {
		TipoInstitucionDTO tipoInstitucion = TipoInstitucionDTO.build();
	}		
	
}
