package co.edu.uco.deviucopay.crosscutting.helper;

public class ObjectHelper {

	private ObjectHelper() {
		super();
	}
	
	public static final boolean isNull(final Object object) {
	return object == null;
	}
	
	public static final boolean isNullOrEmpty(final Object object) {
		return isNull(object);
	}
	
	public static final Object getDefaultValue(final Object object, final Object defaultValue) {
		return isNullOrEmpty(object)? defaultValue : object;			
	}
	
	public static final Object getDefaultValue(final Object object) {
		return getDefaultValue(object, null);		
	}
	
	public static final Object applyDefault(final Object object) {
		return getDefaultValue(object);
	}
}
